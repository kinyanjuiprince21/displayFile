<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.Cursor?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controllers.DisplayFile">
   <children>
      <VBox VBox.vgrow="ALWAYS">
         <children>
            <ScrollPane fitToHeight="true" fitToWidth="true" VBox.vgrow="ALWAYS">
               <content>
                  <TextArea fx:id="txtFile" wrapText="true">
                     <padding>
                        <Insets bottom="3.0" left="3.0" right="3.0" top="3.0" />
                     </padding>
                  </TextArea>
               </content>
            </ScrollPane>
         </children>
      </VBox>
      <HBox maxHeight="40.0" minHeight="40.0" spacing="10.0" VBox.vgrow="ALWAYS">
         <children>
            <Label text="Filename" HBox.hgrow="ALWAYS" />
            <TextField fx:id="txtFilename" prefHeight="24.0" prefWidth="260.0" HBox.hgrow="ALWAYS" />
            <Button fx:id="btnChooseFile" mnemonicParsing="false" text="Choose file" HBox.hgrow="ALWAYS">
               <cursor>
                  <Cursor fx:constant="HAND" />
               </cursor></Button>
            <Button fx:id="btnView" mnemonicParsing="false" text="View" HBox.hgrow="ALWAYS">
               <cursor>
                  <Cursor fx:constant="HAND" />
               </cursor></Button>
         </children>
         <padding>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
         </padding>
      </HBox>
   </children>
</VBox>
